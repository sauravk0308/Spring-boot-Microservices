package io.moviecatalogservice.resource;

import java.util.Arrays;
import java.util.Collections;
import java.util.List;
import java.util.stream.Collector;
import java.util.stream.Collectors;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

import io.moviecatalogservice.model.CatalogItem;
import io.moviecatalogservice.model.Rating;

@RestController
@RequestMapping("/catalog")
public class MovieCatalogResource {

	RestTemplate resttemplate = new RestTemplate();
	resttemplate.getForObject("http://localhost:8082/movies/4", )
	
	@RequestMapping("/{userId}")
	public List<CatalogItem> getCatalog(@PathVariable("userId") String userId){

		List<Rating> ratings = Arrays.asList(
					new Rating("1234", 4), 
					new Rating("5678", 3)
				);
		return ratings.stream().map(rating -> {
						new CatalogItem("Saurav", "Test", 4)
			})
					.collect(Collectors.toList());
		
	}
}
